
<header>
  <div class='container'>
    <h1>Grasses</h1>
    <nav>
      <ul>
        <% if current_user.nil?%>
        <li><%= link_to "Sign Up" , signup_path%></li>
        <li><%= link_to "Log In" , login_path%></li>
        <% else%>
      
        <li><%= link_to "Add Class", new_period_path%></li>
        <li><%= link_to "Add Student", new_student_path%></li>
        <li><%= link_to "Classes", user_periods_path(current_user) %></li> 
        <li><%= link_to "Students", students_path(current_user) %></li>  
        <li><%= link_to "Assignments", assignments_path(current_user) %></li>
        <li><%= link_to "Account", user_path(current_user)%> </li>
        <li><%= link_to "Logout", logout_path, method:"delete"%></li>
        <%end%>
      </ul>
    </nav>
  </div>
